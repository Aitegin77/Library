@page
@model API.Pages.Genres.CreateModel
@{
    ViewData["Title"] = "Создание нового жанра";
}

<h2 class="text-4xl font-bold mb-10 text-center text-white">Создание нового жанра</h2>
<form method="post" enctype="multipart/form-data" asp-page-handler="Create"
      class="max-w-3xl mx-auto space-y-6 bg-white p-6 rounded-xl shadow-md">

    <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

    <!-- Название -->
    <div>
        <label asp-for="Genre.Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
        <input asp-for="Genre.Name" class="w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-indigo-500 outline-none" />
        <span asp-validation-for="Genre.Name" class="text-red-600 text-sm"></span>
    </div>

    <!-- Кнопка отправки -->
    <div class="flex justify-center">
        <button type="submit" asp-page-handler="Create"
                class="bg-green-600 text-white px-5 py-2 rounded-lg hover:bg-green-700 transition">
            Создать
        </button>
    </div>
</form>

<script src="~/js/uploadBook.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}